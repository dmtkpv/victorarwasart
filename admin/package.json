{
    "//": [
        "npm run dev serve",
        "npm run prod daemon",
        "npm run article",
        "npm run article -- -w",
        "npm run styles -- -w"
    ],
    "scripts": {
        "serve": "directus start",
        "daemon": "pm2 delete --silent \"victorarwas:admin\"; pm2 start npm --name \"victorarwas:admin\" -- run serve",
        "dev": "NODE_ENV=development npm run",
        "prod": "NODE_ENV=production npm run",
        "article": "rollup -c interfaces/article/rollup.js",
        "styles": "rollup -c interfaces/styles/rollup.js"
    },
    "dependencies": {
        "directus": "9.0.0-rc.61",
        "html-to-text": "^6.0.0",
        "mysql": "^2.18.1"
    },
    "devDependencies": {
        "rollup": "^2.35.1",
        "rollup-plugin-commonjs": "^10.1.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-styles": "^3.12.1",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-vue": "^5.0.0",
        "vue-template-compiler": "^2.6.12"
    }
}
